{
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next.config.js",
    "cypress/*",
    "src/tests/jest/jest.setup.js"
  ],
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "baseUrl": "src",
    "jsx": "preserve",
    "module": "esnext",
    "types": ["cypress", "jest"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "incremental": true,
    "paths": {
      "@public/*": ["../public/*"],
      "@common/*": ["../../common/src/*"]
    }
  },
  "references": [{ "path": "./submodules/common" }]
}
